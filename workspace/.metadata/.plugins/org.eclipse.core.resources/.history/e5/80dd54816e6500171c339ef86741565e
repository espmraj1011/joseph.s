import com.sendgrid.*;

import espm.Read;

import java.io.IOException;

public class Example {
  public static void main(String[] args) throws IOException {
    Email from = new Email("muthuraj.esp@gmail.com");
    String subject = "Sending with SendGrid is Fun";
    Email to = new Email("muthuraj.esp@outlook.com");
//    Content content = new Content("text/plain", "and easy to do anywhere, even with Java");
    Content content = new Content("text/html", Read.otp());
    Mail mail = new Mail(from, subject, to, content);

    SendGrid sg = new SendGrid("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");
    Request request = new Request();
    try {
      request.setMethod(Method.POST);
      request.setEndpoint("mail/send");
      request.setBody(mail.build());
      Response response = sg.api(request);
      System.out.println(response.getStatusCode());
      System.out.println(response.getBody());
      System.out.println(response.getHeaders());
    } catch (IOException ex) {
      throw ex;
    }
  }
}